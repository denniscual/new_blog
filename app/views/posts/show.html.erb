<div class="wrapper clearfix">
  <article id="post_show_content" class="skinny_wrapper wrapper_padding">
    <header>
      <p class="date"><%=	 @post.created_at.strftime('%A, %B %d') %></p>
      <h2><%=	 @post.title %></h2>
    </header>
    <hr>
    <section id="content">
      <article>
        <%=	markdown @post.content %>
        <!--<button class="btn" data-clipboard-action="copy" data-clipboard-target="pre">-->
          <!--Cut to clipboard-->
        <!--</button>-->
      </article>
      <hr>
      <%	if user_signed_in? %>
        <div id="admin_links">
          <%= link_to 'Edit Article' , edit_post_path(@post) %>
          <%=	link_to 'Delete Article', post_path(@post), method: :delete, data: { confirm: 'Are you sure you want to delete this article?'} %>
        </div>
      <%	 end %>
      <div id="share_box">
        <p>Share The DO List</p>
        <a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by \
          @mackenziechild - &amp;url=<%=url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
          <i class="fa fa-twitter"></i>
        </a>
        <a onclick="javascript:window.open('http://facebook.com/sharer.php?u=<%= @post.title %> by \
          @drishAisha- &amp;url=<%=url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
          <i class="fa fa-facebook"></i></a>
        <a onclick="javascript:window.open('http://plus.google.com/intent/tweet?text=<%= @post.title %> by \
          @mackenziechild - &amp;url=<%=url_for([@post, only_path: false]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);">
          <i class="fa fa-google-plus"></i>
        </a>
      </div>
      <hr>
      <%=	 render 'disqusform' %>
    </section>

  </article>

</div>
